<div class = 'row'>
  <div class = 'col-10 mx-auto admin-table-wrap'>
    <h2>コメント一覧</h2>
    <table class = 'table table-bordered admin-table'>
      <thead>
        <tr class = 'text-center'>
          <th class = 'col-1'>ID</th>
          <th class = 'col-2'>投稿ユーザー</th>
          <th>コメント</th>
          <th class = 'col-2'>投稿日時</th>
          <th class = 'col-1'></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td class = 'text-center'><%= comment.id %></td>
            <td class = 'text-center'><%= comment.user.name %></td>
            <td><%= comment.comment %></td>
            <td class = 'text-center'><%= comment.created_at.strftime('%Y-%m-%d %H:%M')  %></td>
            <td class = 'text-center'>
              <%= link_to '詳細', admin_post_path(comment.post), class: 'btn btn-sm btn-secondary' %>
              <%= link_to '削除', admin_comment_path(comment, comment.post), data: { confirm: "コメント「#{comment.comment}」を削除します。" }, method: :delete, class: 'btn btn-sm btn-danger'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @comments %>
  </div>
</div>
