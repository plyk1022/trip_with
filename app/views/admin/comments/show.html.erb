<div class = 'row'>
  <div class = 'col-11 mx-auto'>
    <div class = 'row'>

      <div class = 'col-12 col-md-3 mx-auto'>
        <%= render 'admin/users/info', user: @user %>
      </div>

      <div class = ' col-12 col-md-8 mx-auto admin-table-wrap'>
        <table class = 'table admin-table'>
          <thead>
            <tr>
              <th class = 'col-1 text-center'>ID</th>
              <th class = 'col-3 text-center'>投稿日時</th>
              <th class = 'text-center'>コメント</th>
              <th class = 'col-1'></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td class = 'text-center'><%= comment.id %></td>
                <td class = 'text-center'><%= comment.created_at.strftime('%Y-%m-%d %H:%M') %> </td>
                <td><%= comment.comment %></td>
                <td>
                  <%= link_to '詳細', admin_post_path(comment.post), class: 'btn btn-sm btn-secondary' %>
                  <%= link_to '削除', admin_comment_path(comment, comment.post), data: { confirm: "コメント「#{comment.comment}」を削除します。" }, method: :delete, class: 'btn btn-sm btn-danger'%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @comments %>
      </div>

    </div>
  </div>
</div>
