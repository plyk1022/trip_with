<div class = 'row'>
  <div class = 'col-3'>
    <div class = 'row'>
      <div class = 'col-12'>
        <%= image_tag @user.get_profile_image(80, 80), class: 'rounded-circle border' %>
        <%= @user.name %>
      </div>
    </div>

    <div class = 'row'>
      <div class = 'col-12'>
        <%= @user.introduction %>
      </div>
    </div>

    <div class = 'row'>
      <div class = 'col-12'>
        <%= link_to '編集', edit_admin_user_path(@user) %>
      </div>
    </div>
  </div>

  <div class = 'col-8'>
    <%= render 'admin/homes/index', posts: @posts %>
  </div>
</div>
