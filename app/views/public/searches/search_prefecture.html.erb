<div class = 'row'>
  <div class = 'col-12 col-md-11 mx-auto'>
    <h4>【検索結果】<%= @range %>:　<%= @word %></h4>
  </div>
</div>

<div class = 'row'>
  <div class = ' col-12 col-md-11 mx-auto'>
    <div class = 'row'>
      <div class = 'col-12 col-md-3'>
        <%= render 'public/searches/search_form', post: @post %>
        <%= render 'public/searches/search_prefecture', prefectures: @prefectures %>
      </div>

      <div class = 'col-12 col-md-8 ml-5 mx-auto'>
        <% if @posts.count == 0 %>
          <h4 class = 'text-center'>「<%= @prefecture.name %>」に一致する投稿は見つかりませんでした。</h4>
        <% else %>
          <%= render 'public/posts/index', posts: @posts %>
        <% end %>
      </div>
    </div>
  </div>
</div>