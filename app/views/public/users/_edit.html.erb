<div class = 'row'>
  <div class = 'col-12 col-md-7 mx-auto'>
     <div class 'error_messages'>
      <% if user.errors.any? %>
        <% user.errors.full_messages.each do |message| %>
          <li class = 'text-danger mx-auto'><%=  message %></li>
        <% end %>
      <% end %>
    </div>
    <div class = 'card'>
      <h2 class = 'card-header text-center'>登録情報編集</h2>

      <%= form_with model: user do |f| %>
        <div class = 'row mt-3'>
          <div class = 'col-11 col-md-5 mx-auto'>
            <%= f.label :name, 'ユーザーネーム', class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class = 'row mt-3'>
          <div class = 'col-11 col-md-5 mx-auto'>
            <%= f.label :introduction, '自己紹介', class: 'form-label' %>
            <%= f.text_area :introduction, rows: '5', class: 'form-control' %>
          </div>
        </div>

        <div class = 'row mt-3'>
          <div class = 'col-11 col-md-5 mx-auto'>
            <%= f.label :profile_image, 'プロフィール画像', class: 'form-label' %>
            <%= f.file_field :profile_image, accept: "image/*", class: 'form-control' %>
          </div>
        </div>

        <div class = 'row my-5'>
          <%= f.submit '編集内容を保存', class: 'col-8 col-md-4 btn btn-secondary mx-auto' %>
        </div>
      <% end %>
    </div>
  </div>
</div>