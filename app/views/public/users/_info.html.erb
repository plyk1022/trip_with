<div class = 'row'>
  <div class = 'col-12'>
    <%= image_tag user.get_profile_image(80, 80), class: 'rounded-circle border' %>
    <%= user.name %>
  </div>
</div>

<div class = 'row'>
  <div class = 'col-12'>
    <%= user.introduction %>
  </div>
</div>

<div class = 'row'>
  <div class = 'col-12'>
    <% if user == current_user %>
      <%= link_to '編集', edit_user_path(user) %>
    <% end %>
  </div>
</div>