<div class = 'nested-fields'>
  <div class = 'row'>
    <div class = 'col-9'>
      <%= f.label :name, 'スポット', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :comment, 'コメント', class: 'form-label' %>
      <%= f.text_area :comment, class: 'form-control' %>

      <div class = 'row'>
        <div class = 'col-6'>
           <%= f.label :arriving_time, '到着時間', class: 'form-label' %>
        <%= f.time_field :arriving_time, class: 'form-control' %>
        </div>
  
        <div class = 'col-6'>
           <%= f.label :leaving_time, '出発時間', class: 'form-label' %>
        <%= f.time_field :leaving_time, class: 'form-control' %>
        </div>
      </div>

      <%= f.label :spot_image, '画像選択', class: 'form-label' %>
      <%= f.file_field :spot_image, accept: "image/*", class: 'form-control' %>
    </div>
    
    <div class = 'col-3' style = 'margin-top: 200px;'>
      <%= link_to_remove_association '×スポット', f %>
    </div>
  </div>
</div>