<div class = 'nested-fields'>
  <div class = 'row border-left border-dark mt-5'>
    <div class = 'col-10'>
      <div class = 'form-group'>
        <%= f.label :name, 'スポット', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class = 'col-1' style = 'margin-top:32px;'>
      <%= link_to_remove_association '×', f, class: 'btn btn-danger rounded-circle' %>
    </div>

    <div class = 'col-10'>
      <div class = 'form-group'>
        <%= f.label :comment, 'コメント', class: 'form-label' %>
        <%= f.text_area :comment, rows: '5', class: 'form-control' %>
      </div>
    </div>
    <div class = 'col-5'>
      <div class = 'form-group'>
        <%= f.label :arriving_time, '到着時間',  class: 'form-label' %>
        <%= f.time_field :arriving_time, value: '00:00', class: 'form-control' %>
      </div>
    </div>
    <div class = 'col-5'>
      <div class = 'form-group'>
        <%= f.label :leaving_time, '出発時間', class: 'form-label' %>
        <%= f.time_field :leaving_time, value: '00:00', class: 'form-control' %>
      </div>
    </div>
    <div class = 'col-10'>
      <div class = 'form-group'>
        <%= f.label :spot_image, '画像選択', class: 'form-label' %>
        <%= f.file_field :spot_image, accept: "image/*", class: 'form-control' %>
      </div>
    </div>
  </div>
</div>