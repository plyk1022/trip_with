<h1>新規投稿</h1>

<%= form_with model: @post do |f| %>

    <div class = 'field'>
        <%= f.label :start_date, '開始日' %><br>
        <%= f.date_field :start_date %>
    </div>
    
    <div class = 'field'>
        <%= f.label :end_date, '終了日' %><br>
        <%= f.date_field :end_date %>
    </div>

    <div class = 'field'>
        <%= f.label :title, 'タイトル' %><br>
        <%= f.text_field :title %>
    </div>
    
    <div class = 'field'>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </div>
    
    <%= f.fields_for :prefecture_relations do |pref| %>
        <%= render 'prefecture_relation_fields', f: pref %>
    <% end %>
    
    <div class = 'links'>
        <%= link_to_add_association "都道府県追加", f, :prefecture_relations %>
    </div>
    
    
        <%= f.submit '詳細入力へ' %>
     

    

<% end %>
