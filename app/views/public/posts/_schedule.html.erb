<div class = 'row mb-5'>
  <div class = 'col-12 col-md-3'>
    <div class = 'form-group'>
      <%= f.date_field :date, class: 'form-control' %>
    </div>
  </div>

  <div class = 'col-12 col-md-9 mx-auto'>
    <div class = 'form-group'>
      <%= f.fields_for :spots do |spot| %>
        <%= render 'public/posts/spot_fields', f: spot %>
      <% end %>
    </div>

    <div class = 'links'>
      <%= link_to_add_association '＋スポット', f, :spots,
      partial: 'public/posts/spot_fields',
      class: 'rounded-pill btn btn-block btn-outline-secondary col-6 col-md-4' %>
    </div>
  </div>
</div>